<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   android:background="@color/background"
   android:gravity="center"
   android:padding="35dip">
   <TextView
      android:text="@string/prehistoric_florida"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_gravity="center"
      android:layout_marginBottom="20dip"
      android:textSize="24.5sp" />
   <TableLayout
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_gravity="center"
      android:stretchColumns="*">
      <TableRow>
         <Button
            android:id="@+id/trivia_button"
            android:text="@string/trivia_game" />
         <Button
            android:id="@+id/animal_button"
            android:text="@string/prehistoric_animal_label" />
      </TableRow>
      <TableRow>
         <Button
            android:id="@+id/sealevel_button"
            android:text="@string/sea_level_changes" />
         <Button
            android:id="@id/fossils_button"
            android:text="@string/Paleontology_and_fossils"  />
      </TableRow>
   </TableLayout>
</LinearLayout>