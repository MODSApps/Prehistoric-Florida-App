<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:padding="30dip"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="528dp"
        android:layout_height="413dp"
        android:layout_weight="1.22">

        <ImageView
            android:layout_width="700dp"
            android:layout_height="400dp"
            android:id="@drawable/ice_melt"
            android:src="@drawable/ice_melt"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="60dp" />



        <TextView
            android:layout_width="600dp"
            android:layout_height="260dp"
            android:inputType="none"
            android:ems="10"
            android:id="@+id/editText"
            android:text="Commonly known for their large saber tooth, these predators canines grew up to 7 inches and they could open their mouths extremely wide. These deadly predators went extinct around 10,000 years ago. "
            android:textStyle="bold|italic"
            android:textSize="35dp"
            android:textColor="#000000"
            android:shadowColor="#00008B"
            android:scrollbars="vertical"
            android:layout_above="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView2"
            android:layout_alignTop="@+id/editText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="73dp" />

        <TextView
            android:text="Saber-toothed Cat"
            android:layout_height="wrap_content"
            android:layout_width="800dp"
            android:textSize="60dp"
            android:paddingLeft="50dp"
            android:textStyle="bold|italic"
            android:id="@+id/textView3"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingTop="30dp" />

        <Button
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:text="Click here to restart!"
            android:id="@+id/button"
            android:gravity="bottom"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/blankbutton"
            android:paddingBottom="20dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="47dp" />


    </RelativeLayout>
</LinearLayout>